ggplot(subscription_gender_counts, aes(fill=`Subscription.Status`, y=n, x=Gender)) + 
  geom_bar(position="stack", stat="identity") +
  labs(x = "Gender", y = "Count", title = "Subscription Status by Gender") +
  theme_minimal()